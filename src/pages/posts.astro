---
import { posts } from '@/utils/meta';

// Layouts
import ArchiveLayout from '@/layouts/ArchiveLayout.astro';
---

<ArchiveLayout
  title="文章"
  list={posts.map(({ slug, data }) => ({
    url: `/posts/${slug}`,
    title: data.title,
    excerpt: data.excerpt,
    published_at: data.published_at,
    tags: data.tags
  }))}
/>
